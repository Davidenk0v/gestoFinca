---
import Image from "astro/components/Image.astro";
import logoadmin from "../assets/logos/imagen_logo.png";
const texts = Astro.props.texts;
const { phrase, pages, useful_links } = texts;
console.log(pages)
console.log(useful_links)

---
<footer class="bg-slate-200 py-8">
  <div class="container mx-auto px-4">
    <div class="flex flex-wrap justify-between text-left lg:text-left">
      <!-- Columna de texto y logo -->
      <div class="w-full lg:w-6/12 px-4 mb-6 lg:mb-0">
        <h4 class="text-3xl font-semibold text-brand-blueFinca">
          Gesto<span class="text-brand-greenFinca">Finca</span>
        </h4>
        <p class="text-lg mt-0 mb-4 text-gray-900">{phrase}</p>
        <div class="flex flex-wrap items-center justify-start">
          <a href="/nosotros" class="inline-block mr-4">
            <Image
              src={logoadmin}
              alt="GestoFinca"
              class="w-52 h-20 object-contain"
            />
          </a>
        </div>
      </div>

      <!-- Columna de enlaces -->
      <div class="w-full lg:w-6/12 px-4">
        <div class="flex flex-wrap mb-6">
          <!-- Páginas -->
          <div class="w-full lg:w-6/12 px-4 mb-4 lg:mb-0">
            <span class="block uppercase text-blueGray-500 text-sm font-semibold mb-2">
              {pages.title}
            </span>
            <ul class="list-unstyled">
              {pages.links.map((page) => (
                <li>
                  <a
                    href={page.link}
                    class="text-blueGray-600 hover:text-blueGray-800 font-semibold block pb-2 text-sm"
                  >
                    {page.name}
                  </a>
                </li>
              ))}
            </ul>
          </div>

          <!-- Enlaces útiles -->
          <div class="w-full lg:w-6/12 px-4">
            <span class="block uppercase text-blueGray-500 text-sm font-semibold mb-2">
              {useful_links.title}
            </span>
            <ul class="list-unstyled">
              {useful_links.links.map((link) => (
                <li>
                  <a
                    href={link.link}
                    class="text-blueGray-600 hover:text-blueGray-800 font-semibold block pb-2 text-sm"
                  >
                    {link.name}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        </div>
      </div>
    </div>

    <!-- Línea divisoria -->
    <hr class="my-6 border-blueGray-300" />

    <!-- Copyright -->
    <div class="flex flex-wrap items-center justify-center md:justify-between">
      <div class="w-full md:w-4/12 px-4 mx-auto text-center">
        <div class="text-sm text-blueGray-500 font-semibold py-1">
          Copyright © <span id="get-current-year">2025</span>
          <a
            href="/"
            class="text-blueGray-500 hover:text-blueGray-800"
            >GestoFinca S.L</a
          >
          .
        </div>
      </div>
    </div>
  </div>
</footer>
