---
import logoadmin from "@/assets/logos/imagen_logo.png";
import Image from "astro/components/Image.astro";
const {texts, lang} = Astro.props;
const { phrase, pages, useful_links, contact } = texts;
---
<footer class="bg-slate-200 py-8">
  <div class="container mx-auto px-4">
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 text-left">
      
      <!-- Columna de logo y descripción -->
      <div class="px-4">
        <h4 class="text-3xl font-semibold text-brand-blueFinca">
          Gesto<span class="text-brand-greenFinca">Finca</span>
        </h4>
        <p class="text-lg mt-2 mb-4 text-gray-900">{phrase}</p>
        <a href={`/?lang=${lang}`} title="Inicio">
          <Image
            src={logoadmin}
            alt="Logo de GestoFinca"
            class="w-44 h-auto object-contain"
          />
        </a>
      </div>

      <!-- Páginas -->
      <nav class="px-4">
        <h5 class="text-lg font-semibold text-gray-700 uppercase mb-2">
          {pages.title}
        </h5>
        <ul class="space-y-2">
          {pages.links.map((page: any) => (
            <li>
              <a
                href={page.link}
                class="text-gray-600 hover:text-gray-800 transition-colors duration-200 block"
              >
                {page.name}
              </a>
            </li>
          ))}
        </ul>
      </nav>

      <!-- Enlaces útiles -->
      <nav class="px-4">
        <h5 class="text-lg font-semibold text-gray-700 uppercase mb-2">
          {useful_links.title}
        </h5>
        <ul class="space-y-2">
          {useful_links.links.map((link: any) => (
            <li>
              <a
                href={link.link}
                class="text-gray-600 hover:text-gray-800 transition-colors duration-200 block"
              >
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </nav>

      <!-- Datos de la empresa -->
      <div class="px-4">
        <h5 class="text-lg font-semibold text-gray-700 uppercase mb-2">
          {contact.title}
        </h5>
        <ul class="space-y-2">
          <li>
            <span class="text-gray-600 font-semibold">{contact.phone.tag}:</span>
            <a href={`tel:${contact.phone.info}`} class="text-gray-600 hover:text-gray-800 transition-colors duration-200 block">
              {contact.phone.info}
            </a>
          </li>
          <li>
            <span class="text-gray-600 font-semibold">{contact.email.tag}:</span>
            <a href={`mailto:${contact.email.info}`} class="text-gray-600 hover:text-gray-800 transition-colors duration-200 block">
              {contact.email.info}
            </a>
          </li>
          <li>
            <span class="text-gray-600 font-semibold">{contact.address.tag}:</span>
            <p class="text-gray-600">
              {contact.address.tag} {contact.city.tag}
            </p>
          </li>
        </ul>
      </div>

    </div>

    <!-- Línea divisoria -->
    <hr class="my-6 border-gray-300" />

    <!-- Copyright -->
    <div class="text-center text-sm text-gray-500 font-semibold">
      &copy; <span id="get-current-year">2025</span> 
      <a href="/" class="text-gray-600 hover:text-gray-800">
        GestoFinca S.L
      </a>
    </div>

  </div>
</footer>
