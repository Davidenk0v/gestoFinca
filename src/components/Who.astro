---
import Image from 'astro/components/Image.astro';
import house from '../assets/images/house.png';

const { about_us, footer } = Astro.props.data;
const link = footer.useful_links.links[0].link;
---

<section class="bg-slate-100 dark:bg-gray-900">
    <div class="grid max-w-screen-xl px-4 py-8 mx-auto lg:grid-cols-12 lg:gap-8 xl:gap-0 lg:py-16">
        
        <!-- Texto y contenido -->
        <div class="mr-auto place-self-center lg:col-span-7">
            <h1 class="max-w-2xl mb-4 text-4xl font-extrabold tracking-tight leading-none md:text-5xl xl:text-6xl dark:text-white">
                {about_us.phrases[0]}
            </h1>
            <p class="max-w-2xl mb-6 text-gray-600 lg:mb-8 md:text-lg lg:text-xl dark:text-gray-400">
                {about_us.description}
            </p>
            <p class="max-w-2xl mb-6 text-gray-600 lg:mb-8 md:text-lg lg:text-xl dark:text-gray-400">
                {about_us.text}
            </p>

            <!-- Botón de contacto optimizado para SEO y accesibilidad -->
            <a href={link} 
            class="inline-flex items-center px-6 py-3 text-sm font-medium text-white bg-orange-500 rounded-lg shadow-md transition-all hover:bg-orange-700 focus:ring-4 focus:outline-none focus:ring-orange-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
            aria-label="Contáctanos para más información sobre administración de fincas">
             {about_us.buttons.contact_us}
             <svg class="w-4 h-4 ml-2 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                 <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9" />
             </svg>
         </a>
         
        </div>

        <!-- Imagen optimizada -->
        <div class="flex justify-center lg:col-span-5 sm:hidden md:block">
            <Image src={house} alt="Imagen de una casa en una mano" loading="lazy" class="rounded-lg">
        </div>

    </div>
</section>
