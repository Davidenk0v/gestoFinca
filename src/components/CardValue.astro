---
import Image from "astro/components/Image.astro"
const { image, text, title, imageAlt } = Astro.props
---

<article class="flex flex-col items-center text-center space-y-4">
    <div class="w-24 h-24 md:w-28 md:h-28 flex items-center justify-center overflow-hidden" aria-hidden="true">
      <Image 
        src={image} 
        alt={imageAlt || ""} 
        width={112} 
        height={112} 
        loading="lazy"
      />
    </div>
    <h3 class="text-2xl font-bold leading-tight text-gray-900 dark:text-white">
      {title}
    </h3>
    <p class="text-lg font-normal text-gray-800 dark:text-gray-200">
      {text}
    </p>
</article>