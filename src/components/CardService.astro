---
import Image from "astro/components/Image.astro"
const { link, img, title, text, button } = Astro.props
---

<div class="w-full max-w-screen-md mx-auto p-4 bg-white border border-gray-200 rounded-lg shadow-md">
    <div class="flex justify-center">
        <Image src={img} alt="Icono" class="w-20 h-20 md:w-24 md:h-24" />
    </div>
    <div class="p-5 text-center">
        <h5 class="mb-2 text-xl font-bold tracking-tight text-gray-900 dark:text-white md:text-2xl">{title}</h5>
        <p class="mb-3 text-sm font-normal text-gray-700 dark:text-gray-400 md:text-base">{text}</p>
        <a href={link} class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-orange-500 rounded-lg hover:bg-orange-700 focus:ring-4 focus:outline-none focus:ring-orange-300 dark:bg-blue-600 dark:hover:bg-blue-700 cursor-pointer dark:focus:ring-blue-800">
            {button}
            <svg class="w-4 h-4 ml-2 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9" />
            </svg>
        </a>
    </div>
</div>
