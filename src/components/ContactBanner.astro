        <div class="flex flex-col gap-6 md:flex-row md:items-center md:justify-between text-center md:text-left">
          {/* Text Section */}
          <p class="text-lg sm:text-xl font-bold text-gray-800">{text}</p>
          
          {/* Phone Section */}
          <div class="flex items-center justify-center md:justify-start gap-4">
            <img src={phoneIcon.src} alt="TelÃ©fono" class="w-6 h-6 sm:w-8 sm:h-8" />
